#!/bin/bash
# We donâ€™t directly depend on Substrate, but tweaks may load us into places like SpringBoard.
# Ask the package manager to restart SpringBoard after install.

function finish() {
	f="${1}"

	# No control fd: bail out
	[[ -z "${f}" || -z "${CYDIA}" ]] && return
	cydia=(${CYDIA})

	# Cydia control fd version != 1: bail out
	[[ ${cydia[1]} -eq 1 ]] || return

	echo "finish:${f}" >&${cydia[0]}
}

finish restart
